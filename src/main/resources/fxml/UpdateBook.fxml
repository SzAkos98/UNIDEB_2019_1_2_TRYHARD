<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane styleClass="borderpane" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.inf.controller.UpdateBookController"
            minWidth="1920" minHeight="1080">

<top>
        <Label styleClass="title" text="Könyv módosítása" />
    </top>
    <center>
        <TableView fx:id="table" onMouseClicked="#handleSelection" />
    </center>
    <bottom>
        <VBox spacing="10.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label text="Könyvtár ID:" />
                        <TextField fx:id="id" disable="true" />
                        <Label text="Szerző: " />
                        <TextField fx:id="author" />
                        <Label text="Cím:" />
                        <TextField fx:id="title" />
                        <Label text="Kiadó: " />
                        <TextField fx:id="publisher" />
                        <Label text="Kiadás éve " />
                        <TextField fx:id="yearOfPublication" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button onAction="#handleMod" prefWidth="200" text="Módosít" />
                        <Button onAction="#handleBack" prefWidth="200" text="Vissza" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
    <opaqueInsets>
        <Insets topRightBottomLeft="50.0" />
    </opaqueInsets>
    <padding>
        <Insets topRightBottomLeft="50.0" />
    </padding>
</BorderPane>
