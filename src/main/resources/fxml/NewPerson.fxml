<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane styleClass="borderpane" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.inf.controller.NewPersonController"
            minWidth="1920" minHeight="1080">

<top>
        <Label styleClass="title" text="Új tag" />
    </top>
    <center>
        <TableView fx:id="table" onMouseClicked="#handleSelection" />
    </center>
    <bottom>
        <VBox spacing="10.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label text="ID:" />
                        <TextField fx:id="ID" />
                        <Label text="Keresztnév: " />
                        <TextField fx:id="surname" />
                        <Label text="Vezetéknév" />
                        <TextField fx:id="firstName" />
                        <Label text="Születési Dátum: " />
                        <TextField fx:id="birthDate" promptText="yyyy-mm-dd" />
                        <Label text="Lakcím: " />
                        <TextField fx:id="adress" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button onAction="#handleAdding" prefWidth="200" text="Hozzáad" />
                        <Button onAction="#handleBack" prefWidth="200" text="Vissza" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
    <opaqueInsets>
        <Insets topRightBottomLeft="50.0" />
    </opaqueInsets>
    <padding>
        <Insets topRightBottomLeft="50.0" />
    </padding>
</BorderPane>
